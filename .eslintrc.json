{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "__ANALYTICS__": true,
        "__DEV__": true,
        "__CHROME__": true,
        "__FIREFOX__": true,
        "$": false,
        "chrome": false,
        "ga": false,
        "resourceLibrary": false,
        "rl": false
    },
    "extends": "eslint:recommended",
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "no-inner-declarations": "off",
        "no-useless-escape": "off",
        "no-return-assign": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    }
}
